<%- include('templates/header', {
     pageTitle: 'Sign Up',
     activeTab: 'signup'
}) %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="mt-4 mb-4 text-center">Create an Account</h1>
      <form method="POST" action="/signup">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            required
          >
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            required
          >
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            required
          >
        </div>
        <button type="submit" class="btn btn-primary w-100">Sign Up</button>
      </form>
      <p class="mt-3 text-center">
        <a href="/">Back to Home</a>
      </p>
    </div>
  </div>
</div>

<%- include('templates/footer') %>

